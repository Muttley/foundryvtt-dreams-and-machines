<div class="dreams-dialog">
	<input
		class="value"
		data-dtype="String"
		style="border: none;"
		type="text"
		value="{{value}}"
		autofocus
	>
	<input
		class="index"
		data-dtype="Number"
		type="hidden"
		value="{{index}}"
	>
	<input
		class="actorUuid"
		data-dtype="String"
		type="hidden"
		value="{{actorUuid}}"
	>
	<input
		class="type"
		data-dtype="String"
		type="hidden"
		value="{{type}}"
	>
</div>
