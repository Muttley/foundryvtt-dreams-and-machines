<div class="dreams-dialog">
	<div class="flexrow">
		<div style="background-color: #ebe7d7;">
			<input
				class="value"
				data-dtype="String"
				style="border: none;"
				type="text"
				value="{{value}}"
				autofocus
			>
			<input
				class="index"
				data-dtype="Number"
				type="hidden"
				value="{{index}}"
			>
			<input
				class="actorUuid"
				data-dtype="String"
				type="hidden"
				value="{{actorUuid}}"
			>
			<input
				class="type"
				data-dtype="String"
				type="hidden"
				value="{{type}}"
			>
		</div>
	</div>
</div>
