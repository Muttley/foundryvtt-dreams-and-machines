<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="source">
	<div class="tab-body">
		<select
			name="system.source"
			{{disabled editModeDisabled}}
		>
			<option value="">&mdash;</option>
			{{#each allSources}}
				<option
					value="{{this.uuid}}"
					{{#ifCond ../actor.system.source "===" this.uuid}}
						selected
					{{/ifCond}}
				>
					{{this.name}}
				</option>
			{{/each}}
		</select>
	</div>
</section>
