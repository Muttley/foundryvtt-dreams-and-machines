<div class="strings">
	<span class="label">
		{{localize "DNM.Labels.Actor.CharacterTruths"}}
	</span>

	{{> actor/_partials/background-item
		item=origin
		label=(localize "DNM.Labels.Actor.Origin")
		placeholder=(localize "DNM.Labels.Actor.AddOrigin")
	}}

	{{> actor/_partials/background-item
		item=archetype
		label=(localize "DNM.Labels.Actor.Archetype")
		placeholder=(localize "DNM.Labels.Actor.AddArchetype")
	}}

	{{> actor/_partials/background-item
		item=temperament
		label=(localize "DNM.Labels.Actor.Temperament")
		placeholder=(localize "DNM.Labels.Actor.AddTemperament")
	}}

	{{> actor/character/archetype-goal }}
	{{> actor/character/attitude }}
	{{> actor/character/exhaustion }}

	{{> actor/_partials/custom-string-list
		addRowLabel=""
		currentValues=system.truths
		key="system.truths"
		sectionTitle=(localize "DNM.Labels.Actor.Truths")
		titleAdd=(localize "DNM.Tooltips.Actor.AddTruth")
	}}
</div>
