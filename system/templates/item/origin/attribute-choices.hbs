<div class="grid-4-columns">

	<span class="label grid-colspan-4">
		Attribute Choices
	</span>

	<div class="grid-1-columns grid-colspan-2">

		<div class="grid-2-columns">
			{{#each attributes}}
				<a
					{{#if this.selected}}
						class="selectable-choice selected"
					{{else}}
						class="selectable-choice"
					{{/if}}
					data-action="toggle-attribute-choice"
					data-attribute-id="{{this.id}}"
				>
					{{this.name}}
				</a>
			{{/each}}
		</div>

	</div>

	<label class="sublabel">
		<span>
			Choices
		</span>
		<input
			data-type="Number"
			name="system.attributeChoices.choiceCount"
			type="number"
			value="{{system.attributeChoices.choiceCount}}"
		/>
	</label>

	<label class="sublabel">
		<span>
			Value
		</span>
		<input
			data-type="Number"
			name="system.attributeChoices.value"
			type="number"
			value="{{system.attributeChoices.value}}"
		/>
	</label>

</div>
