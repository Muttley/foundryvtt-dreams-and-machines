<form class="{{ cssClass }} flex !flex-1 flex-col items-center min-h-10">
	{{> item/_partials/header }}

	<div class="w-full h-full p-1">
		{{!-- Attributes --}}
		<div class="grid grid-cols-4">
			<span class="col-span-4 uppercase text-center font-semibold bg-fuchsia-900 text-white p-1">
				{{localize "DNM.Labels.Actor.Attributes" }}
			</span>

			<label class="flex flex-col border-1 border-fuchsia-900 border-solid font-semibold uppercase border-r-0">
				<span class="w-full text-center text-fuchsia-900 text-lg">{{ localize "DNM.Attributes.Might" }}</span>
				<input data-type="Number" type="number" name="system.attributes.might.value" value="{{ system.attributes.might.value }}" class="!text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>
			<label class="flex flex-col border-1 border-fuchsia-900 border-solid font-semibold uppercase">
				<span class="w-full text-center text-fuchsia-900 text-lg">{{ localize "DNM.Attributes.Quickness" }}</span>
				<input data-type="Number" type="number" name="system.attributes.quickness.value" value="{{ system.attributes.quickness.value }}" class="!text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>
			<label class="flex flex-col border-1 border-fuchsia-900 border-solid font-semibold uppercase border-l-0">
				<span class="w-full text-center text-fuchsia-900 text-lg">{{ localize "DNM.Attributes.Insight" }}</span>
				<input data-type="Number" type="number" name="system.attributes.insight.value" value="{{ system.attributes.insight.value }}" class="!text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>
			<label class="flex flex-col border-1 border-fuchsia-900 border-solid font-semibold uppercase border-l-0">
				<span class="w-full text-center text-fuchsia-900 text-lg">{{ localize "DNM.Attributes.Resolve" }}</span>
				<input data-type="Number" type="number" name="system.attributes.resolve.value" value="{{ system.attributes.resolve.value }}" class="!text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>
		</div>

		{{!-- Tech Level/Spirit/Supply Poijnts --}}
		<div class="grid grid-cols-3">
			<label class="flex flex-col uppercase text-center font-semibold border-1 border-t-0 border-solid border-fuchsia-900">
				<span class="bg-fuchsia-900 text-white p-1">{{localize "DNM.Labels.TechLevel" }}</span>
				<input data-type="Number" type="number" name="system.techLevel" value="{{ system.techLevel }}" class="!py-5 !text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>

			<label class="flex flex-col uppercase text-center font-semibold border-1 border-t-0 border-solid border-fuchsia-900 border-l-0">
				<span class="bg-fuchsia-900 text-white p-1">{{localize "DNM.Labels.Actor.Spirit" }}</span>
				<input data-type="Number" type="number" name="system.spirit" value="{{ system.spirit }}" class="!py-5 !text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>

			<label class="flex flex-col uppercase text-center font-semibold border-1 border-t-0 border-solid border-fuchsia-900 border-l-0">
				<span class="bg-fuchsia-900 text-white p-1">{{localize "DNM.Labels.Actor.SupplyPoints" }}</span>
				<input data-type="Number" type="number" name="system.supplyPoints" value="{{ system.supplyPoints }}" class="!py-5 !text-center !font-semibold !text-3xl !border-none !rounded-none !bg-none !mb-1" />
			</label>
		</div>

		{{!-- Benefit --}}
		<div class="flex flex-col my-2 {{#if editable}}gap-1{{/if}}">
			{{#if editable}}
				<input type="text" name="system.benefit.name" value="{{ system.benefit.name }}" placeholder="Benefit Name" class="!text-center !font-semibold" />

				<div class="flex w-full h-full min-h-10 text-center">
					{{ editor enrichedBenefitDescription target="system.benefit.description" button=true editable=editable engine="prosemirror" }}
				</div>
			{{else}}
				<span class="text-center text-lg font-bold">{{ system.benefit.name }}</span>

				<div class="text-center text-lg w-full">{{{ enrichedBenefitDescription }}}</div>
			{{/if}}
		</div>

	</div>
</form>
